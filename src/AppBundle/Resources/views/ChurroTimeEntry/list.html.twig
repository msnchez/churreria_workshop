{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <main role="main" class="container">
        <h1>Churro Cooking Time Entries</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>type</th>
                    <th>cook time</th>
                    <th>cleanup time</th>
                </tr>
            </thead>
            <tbody>
                {% for timeEntry in timeEntries %}
                    <tr>
                        <td>{{ timeEntry.id }}</td>
                        <td>{{ timeEntry.type }}</td>
                        <td>{{ ((timeEntry.endCookingAt.timestamp - timeEntry.startCookingAt.timestamp) / 60)|round }}</td>
                        <td>{{ ((timeEntry.endCleanupAt.timestamp - timeEntry.startCleanupAt.timestamp) / 60)|round }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}
